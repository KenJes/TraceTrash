rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // COLECCIÓN: users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // COLECCIÓN: rutas
    match /rutas/{rutaId} {
      // Todos los autenticados pueden leer rutas
      allow read: if request.auth != null;
      // Todos pueden crear/actualizar/eliminar - control en la app
      allow create, update, delete: if request.auth != null;
    }
    
    // COLECCIÓN: ubicaciones
    match /ubicaciones/{ubicacionId} {
      // Todos pueden leer ubicaciones
      allow read: if request.auth != null;
      // Todos pueden escribir - control en la app
      allow create, update, delete: if request.auth != null;
    }
    
    // COLECCIÓN: incidencias
    match /incidencias/{incidenciaId} {
      // Todos los autenticados pueden leer todas las incidencias
      allow read: if request.auth != null;
      
      // Cualquier usuario autenticado puede crear incidencias
      allow create: if request.auth != null;
      
      // Todos pueden actualizar
      allow update: if request.auth != null;
      
      // Todos pueden eliminar - control en la app
      allow delete: if request.auth != null;
    }
    
    // COLECCIÓN: historial
    match /historial/{historialId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
