rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // COLECCIÓN: users
    match /users/{userId} {
      // Todos los autenticados pueden leer usuarios
      allow read: if request.auth != null;
      // Cualquiera puede crear su propio documento (registro)
      allow create: if request.auth != null;
      // Solo el mismo usuario puede actualizar su documento
      allow update: if request.auth != null && request.auth.uid == userId;
      // Nadie puede eliminar (solo admin manualmente desde consola)
      allow delete: if false;
    }
    
    // COLECCIÓN: rutas
    match /rutas/{rutaId} {
      // Todos los autenticados pueden leer rutas
      allow read: if request.auth != null;
      // Todos pueden escribir (crear/actualizar/eliminar) - control en la app
      allow write: if request.auth != null;
    }
    
    // COLECCIÓN: ubicaciones
    match /ubicaciones/{ubicacionId} {
      // Todos pueden leer ubicaciones
      allow read: if request.auth != null;
      // Todos pueden escribir - control en la app
      allow create, update, delete: if request.auth != null;
    }
    
    // COLECCIÓN: incidencias
    match /incidencias/{incidenciaId} {
      // Todos los autenticados pueden leer todas las incidencias
      allow read: if request.auth != null;
      
      // Cualquier usuario autenticado puede crear incidencias
      allow create: if request.auth != null;
      
      // Todos pueden actualizar
      allow update: if request.auth != null;
      
      // Todos pueden eliminar - control en la app
      allow delete: if request.auth != null;
    }
    
    // COLECCIÓN: historial
    match /historial/{historialId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
